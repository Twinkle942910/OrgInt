<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyCardStyle"
        app:cardBackgroundColor="@color/colorBirthdayType"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:id="@+id/top_lay"

            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_title"
                android:text="@string/planning_card_mock_title"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"/>

            <ImageView

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/planning_image"
                android:background="@drawable/ic_ui"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:id="@+id/sub_tasks_counter_lay"

                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"

                android:background="@color/colorWhite">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/schedules_count_icon"
                    android:background="@drawable/ic_shedule" />

                <TextView
                    android:id="@+id/schedules_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="27dp"
                    android:layout_alignLeft="@+id/schedules_count_icon"
                    android:layout_alignStart="@+id/schedules_count_icon"
                    android:text ="0"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/todo_count_icon"
                    android:background="@drawable/ic_todo"
                    android:layout_marginLeft="16dp"
                    android:layout_alignLeft="@+id/schedules_count_txt"
                    android:layout_alignStart="@+id/schedules_count_txt" />

                <TextView
                    android:id="@+id/todo_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="27dp"
                    android:layout_alignLeft="@+id/todo_count_icon"
                    android:layout_alignStart="@+id/todo_count_icon"
                    android:text ="0"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/work_task_count_icon"
                    android:background="@drawable/ic_work_task"
                    android:layout_marginLeft="16dp"
                    android:layout_alignLeft="@+id/todo_count_txt"
                    android:layout_alignStart="@+id/todo_count_txt" />

                <TextView
                    android:id="@+id/work_task_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="27dp"
                    android:layout_alignLeft="@+id/work_task_count_icon"
                    android:layout_alignStart="@+id/work_task_count_icon"
                    android:text ="0"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthday_count_icon"
                    android:background="@drawable/ic_birthday"
                    android:layout_marginLeft="16dp"
                    android:layout_alignLeft="@+id/work_task_count_txt"
                    android:layout_alignStart="@+id/work_task_count_txt" />

                <TextView
                    android:id="@+id/birthday_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="27dp"
                    android:layout_alignLeft="@+id/birthday_count_icon"
                    android:layout_alignStart="@+id/birthday_count_icon"
                    android:text ="0"/>

            </RelativeLayout>

            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>